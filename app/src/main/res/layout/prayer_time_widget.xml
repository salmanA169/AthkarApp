<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.Athkar.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:theme="@style/Theme.Athkar.AppWidgetContainer"
    android:orientation="vertical"
    android:layoutDirection="rtl"
    >
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <TextView
            android:id="@+id/tv_fajar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="الفجر"
      />

        <ImageView
            android:id="@+id/tv_fajar_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_fajar"
            android:src="@drawable/fajer_icon"
            />
        <TextView
            android:id="@+id/tv_fajar_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_fajar_icon"
            android:text="03:00"
            android:textColor="#fff" />
    </RelativeLayout>

</LinearLayout>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Athkar" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#753</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.AppCompat.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#654</item>

        <item name="postSplashScreenTheme">@style/Theme.Athkar</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_background</item>
        <item name="windowSplashScreenAnimationDuration">200</item>
        <item name="windowSplashScreenIconBackgroundColor">#159</item>
    </style>

    <style name="Widget.Material3.Button.IconButton.customBackGroundAndRipple">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">25dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="backgroundTint">#333D48</item>
        <item name="iconTint">#fff</item>
        <item name="rippleColor">#0DFFFFFF</item>
    </style>
    <style name="ShapeAppearance.MaterialComponents.ShapeCalenderCardView">
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeTopRight">8dp</item>
    </style>

    <style name="ShapeAppearance.MaterialComponents.ShapeCalenderCardView1">
        <item name="cornerSizeBottomLeft">8dp</item>
        <item name="cornerSizeBottomRight">8dp</item>
    </style>
</resources>